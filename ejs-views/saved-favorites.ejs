<!DOCTYPE html>
<html lang="en">
<head>
    <script src="/js/cards.js"></script>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
	<link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('./partials/nav.ejs') %>

    <div class="container main">
        <br>
        <div class="my-title-main">
            <h2>Movies</h2>
            <h4>Please save all movies you want to watch</h4>
        </div>
        <hr>
        <br>
        <div class="row row-cols-1 row-cols-md-4 g-4">
            <% if (movies.length) { %>
                <% movies.forEach(( movie ) => { %>
                    <div class="col">
                        <div class="card card-font">
                            <img src="<%= movie.image %>" class="card-img-top" alt="<%= movie.title %>">
                            
                            <div class="my-card">
                                <div>
                                    <h5 class="my-title"><%= movie.title %></h5>
                                </div>
                                <hr>
                                <div>
                                    <h6 class="my-text">Crew: <%= movie.crew %></h6>
                                </div>
                                <hr>
                                <div>
                                    <h6>Year: <%= movie.year %> | Rating: <%= movie.rating %></h6>
                                </div>
                                
                                <% if (movie.is_saved) { %>
                                    <button type="button" onclick="onClickSaved(this, '<%= movie.id %>')" name="delete" value="<%= movie.is_favorites %>" class="my-btn btn btn-danger btn-lg w-100">Delete</button>
                                <% } else { %>
                                    <button type="button" onclick="onClickSaved(this, '<%= movie.id %>')" name="save" value="<%= movie.is_favorites %>" class="my-btn btn btn-primary btn-lg w-100">Save</button>                                
                                <% } %>

                                <% if (movie.is_favorites) { %>
                                    <button type="button" onclick="onClickFavorites(this, '<%= movie.id %>')" name="no_favorites" class="my-btn btn btn-dark btn-lg w-100">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="30" fill="yellow" class="bi bi-star-fill" viewBox="0 1 16 16">
                                            <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                                        </svg>
                                            Favirites
                                    </button>
                                <% } else { %>
                                    <button type="button" onclick="onClickFavorites(this, '<%= movie.id %>')" name="favorites" class="my-btn btn btn-dark btn-lg w-100">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="yellow" class="bi bi-star" viewBox="0 1 16 16">
                                            <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
                                        </svg>
                                        Favirites
                                    </button>
                                <% } %>
            
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </div>
</body>
</html>
